#!/usr/bin/perl

use strict;
use utf8;

while (<>){
  chomp;
  #$_ =~ s/\!/\!A/g;
  #$_ =~ s/\@/!\B/g;
  $_ =~ s/.\N{U+00A3}/\#/g;
  #$_ =~ s/\$/!D/g;
  #$_ =~ s/\%/!E/g;
  #$_ =~ s/\&/!F/g;
  $_ =~ s/.\N{U+00A7}/\</g;
  #$_ =~ s/\*/!H/g;
  #$_ =~ s/\:/!I/g;
  $_ =~ s/.\N{U+00B1}/\>/g;

  #$_ =~ s/^.*?([\!|A-Z|a-z|0-9].+)$/$1/;
  print $_."\n";
}
